  
{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "es6",
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "typeRoots": [
        "@types",
        "node_modules/@types"
      ],
      "baseUrl": ".",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": [
      "src/**/*",
      "src/custom.d.ts"
    ]
  }